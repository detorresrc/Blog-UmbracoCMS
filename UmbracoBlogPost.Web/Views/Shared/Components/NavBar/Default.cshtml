@using Umbraco.Cms.Web.Common
@model UmbracoBlogPost.Web.AppCode.Models.ViewComponentModels.NavBarVm
@inject UmbracoHelper UmbracoHelper
@{
    var searchTerm = Context?.Request?.Query["query"].ToString();
}
<nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="/">
            <img src="@Model.LogoUrl" alt="@Model.SiteName" width="30" height="30" class="d-inline-block align-top"/>
            @Model.SiteName
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ms-auto py-4 py-lg-0">
                @foreach (var item in Model.NavBarChildren)
                {
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="@item.Url">@item.Name</a></li>    
                }
            </ul>
            
            <partial name="../Partials/Search/_SearchBox" model="(searchTerm, UmbracoHelper)"/>
        </div>
    </div>
</nav>